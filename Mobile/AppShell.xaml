<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:Mobile.Views"
    xmlns:ViewModels="clr-namespace:Mobile.ViewModels"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="Transparent"
    >


    <FlyoutItem Title="Contratante" Icon="contractor">
        <ShellSection>
            <ShellContent  Route="ContractorView" ContentTemplate="{DataTemplate Views:ContractorView}" />
        </ShellSection>
    </FlyoutItem>

    <FlyoutItem Title="Prestador" Icon="servant">
        <ShellSection>
            <ShellContent  Route="ServantView" ContentTemplate="{DataTemplate Views:ServantView}" />
        </ShellSection>
    </FlyoutItem>


    <MenuItem  Text="Sair" StyleClass="MenuItemLayoutStyle" Clicked="OnLogoutButtonClicked" IconImageSource="exit"/>

</Shell>
