<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.LoginView">

    <Grid>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            Margin="0,100"
            VerticalOptions="Center">

            <Image Source="mober_logo" HeightRequest="200"/>

            <Frame Padding="10,0">
                <Entry x:Name="EntryName"  BackgroundColor="Transparent" TextColor="Black" Placeholder="Digite seu nome" Keyboard="Text" Completed="OnLoginButtonClicked"/>
            </Frame>

            <Frame Padding="10,0">
                <Entry x:Name="EntryTelephone"  BackgroundColor="Transparent" TextColor="Black" Placeholder="Digite seu número de telefone" Keyboard="Telephone" Completed="OnLoginButtonClicked"/>
            </Frame>

            <Button Text="Entrar" TextColor="White" BackgroundColor="{DynamicResource Primary}" Clicked="OnLoginButtonClicked"/>

            <ActivityIndicator x:Name="ActivityIndicator_Load"  Color="{DynamicResource Primary}"/>

        </VerticalStackLayout>
    </Grid>
        
      
 
</ContentPage>
